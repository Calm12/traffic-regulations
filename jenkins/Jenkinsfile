properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('configure') {
            steps {
                sh 'cp dist/docker/.env.template dist/docker/.env'
            }
        }
        stage('last docker stop') {
            steps {
                dir('target/build/docker') {
                    sh 'docker-compose down' //try use "|| true"
                }
            }
        }
        stage('maven build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('docker build and start') {
            steps {
                dir('target/build/docker') {
                    //sh 'export HOST_UID=$(id -u)'
                    //sh 'export HOST_GID=$(id -g)'
                    sh """
                        export HOST_UID=\$(id -u)
                        export HOST_GID=\$(id -g)
                        echo $HOST_UID
                        echo $HOST_GID
                    """
                    sh 'echo $HOST_UID'
                    sh 'echo $HOST_GID'
                    sh 'docker-compose build --no-cache'
                    sh 'docker-compose up -d'
                }
            }
        }
    }
}