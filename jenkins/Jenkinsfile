properties([disableConcurrentBuilds()])

def HOST_UID_VAR
def HOST_GID_VAR

pipeline {
    agent {
        label 'master'
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('configure') {
            steps {
                sh 'cp dist/docker/.env.template dist/docker/.env'
            }
        }
        stage('last docker stop') {
            steps {
                dir('target/build/docker') {
                    sh 'docker-compose down' //try use "|| true"
                }
            }
        }
        stage('maven build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('prepare jenkins user ids') {
            steps {
                script {
                    HOST_UID_VAR = sh(script: 'id -u', returnStdout: true).trim()
                    HOST_GID_VAR = sh(script: 'id -g', returnStdout: true).trim()
                }
            }
        }
        stage('docker build and start') {
            steps {
                dir('target/build/docker') {
                    withEnv(["HOST_UID=${HOST_UID_VAR}", "HOST_GID=${HOST_GID_VAR}"]) {
                        sh 'docker-compose build --no-cache'
                        sh 'docker-compose up -d'
                    }
                }
            }
        }
    }
}